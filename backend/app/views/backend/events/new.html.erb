<div class="l-items-index">
  <%= render 'events', events: @events %>
</div>

<div class="l-items-detail">
  <%= simple_form_for @event, html: { class: 'c-form' } do |f| %>
    <%= render 'form',
      form: f,
      partners: @partners,
      tags: @tags,
      activities: @activities,
      publications: @publications,
      users: @users,
      have_picture: false,
      picture_url: nil %>
  <% end %>
</div>
