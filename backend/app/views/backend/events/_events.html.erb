<div class="l-items-index">
  <h2>Events</h2>

  <% if can?(:create, Event) %>
    <%= link_to "New", new_event_path %>
  <% end %>
  <ul>
    <% @events.each do |event| %>
      <li>
        <h2><%= event.title %></h2>
        <%= link_to 'Edit', edit_event_path(event) %>
      </li>
    <% end %>
  </ul>
</div>
