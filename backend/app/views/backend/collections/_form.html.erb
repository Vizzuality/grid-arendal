<%= render 'backend/shared/form/header', form: form,
  inputs: [{value: :title, title_placeholder: 'Photo title'}],
  preview_url: main_app.medium_path(form.object) %>

<div class="fields">

  <%= render 'backend/shared/form/field_input', form: form, value: :external_id,
    disabled: true, label_txt: "Flickr album id",
    note_txt: "Flickr id can't be changed" %>

  <%= render 'backend/shared/form/field_photos', form: form,
    label_txt: 'Graphics', photos: @collection_graphics, external_link: true %>

  <%= render 'backend/shared/form/field_textarea', form: form,
    value: :description, disabled: true,
    note_txt: "Description is maintained on Flickr." %>

  <%= render 'backend/shared/form/field_input', form: form, value: :author %>

  <%= render 'backend/shared/form/field_input', form: form, value: :licence,
    disabled: true, note_txt: "License is maintained on Flickr" %>

  <%= render 'backend/shared/form/field_datepicker', form: form,
    value: :publication_date, disabled: true,
    note_txt: "Publication date can't be changed" %>

  <%= render 'backend/shared/form/field_tags', form: form, collection: tags %>

  <%= render 'backend/shared/form/field_association', form: form,
    value: :activities, collection: activities, label_method: :title,
    js_trigger_class: 'js-select-tags',
    note_txt: '(Choose related activities)' %>

  <%= render 'backend/shared/form/field_association', form: form,
    value: :publications, collection: publications, label_method: :title,
    js_trigger_class: 'js-select-tags',
    note_txt: '(Choose related publications)' %>

  <%= render 'backend/shared/form/field_association', form: form,
    value: :news_articles, collection: news_articles, label_method: :title,
    js_trigger_class: 'js-select-tags', note_txt: '(Choose related news articles)' %>
</div>
