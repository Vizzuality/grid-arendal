<div class="nested-fields fields">
  <%= f.label :label, class: 'text -field-label -bold -dark' %>
  <%= f.input :label, label: false,
    input_html: {value: 'PDF', class: 'basic-input text -plain-text -dark js-select-tags'} %>

  <%= f.label :document %>
  <%= f.input :document, as: :file, label: false %>

  <div class="links">
    <%= link_to_remove_association 'REMOVE DOCUMENT', f, class: 'btn -light' %>
  </div>
</div>
