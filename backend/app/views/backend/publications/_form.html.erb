<%= render 'backend/shared/form/header', form: form,
  inputs: [{value: :title, title_placeholder: 'Publication title'}] %>

<div class="fields">
  <%= render 'backend/shared/form/field_association', form: form,
    value: :content_type, collection: content_types, label_method: :title,
    js_trigger_class: 'js-select-tags' %>

  <%= render 'backend/shared/form/field_tags', form: form, collection: tags %>

  <%= render 'backend/shared/form/field_upload_img', form: form, value: :s_picture, field_class: '-half',
    label_txt: 'Background picture', have_picture: have_picture, picture_url: picture_url %>

  <%= render 'backend/shared/form/field_photos', form: form, value: :media_content_id, label_txt: ' ',
    field_class: '-half', photos: photos, selected_id: media_content_id, with_search: true, js_trigger_class: 'js-select-photo' %>

  <%= render 'backend/shared/form/field_upload_img', form: form, value: :cover_picture, field_class: '-half',
    label_txt: 'Publication cover', have_picture: have_cover_picture,
    picture_url: cover_picture_url %>

  <%= render 'backend/shared/form/field_attach_documents', form: form, documents: :documents, weblinks: :weblinks,
    field_class: '-half', label_txt: 'Files' %>

  <%= render 'backend/shared/form/field_limited_input', form: form,
    value: :short_description, maxlength: 140 %>

  <%= render 'backend/shared/form/field_textarea', form: form,
    value: :description %>

  <%= render 'backend/shared/form/field_input', form: form,
    value: :story_map_url %>

  <%= render 'backend/shared/form/field_datepicker', form: form,
    value: :content_date %>
</div>

<div class="fields -grey">
  <%= render 'backend/shared/form/field_association', form: form,
    value: :activities, collection: activities, label_method: :title,
    js_trigger_class: 'js-select-tags',
    note_txt: '(Choose related activities)' %>

  <%= render 'backend/shared/form/field_association', form: form,
    label: "Media Library", value: :media_contents, collection: media_contents,
    label_method: :info_title,
    js_trigger_class: 'js-select-tags', note_txt: '(Choose related media)' %>

  <%= render 'backend/shared/form/field_association', form: form,
    value: :news_articles, collection: news_articles, label_method: :title,
    js_trigger_class: 'js-select-tags',
    note_txt: '(Choose related news articles)' %>

  <%= render 'backend/shared/form/field_association', form: form, value: :lead_user,
    collection: users, label_method: :display_name, label: "Staff lead",
    js_trigger_class: 'js-select-tags' %>

  <%= render 'backend/shared/form/field_association', form: form, value: :users,
    collection: users, label_method: :display_name, label: "Staff involved",
    js_trigger_class: 'js-select-tags' %>

  <%= render 'backend/shared/form/field_association', form: form, value: :partners,
    collection: partners, label_method: :name,
    js_trigger_class: 'js-select-tags' %>
</div>
