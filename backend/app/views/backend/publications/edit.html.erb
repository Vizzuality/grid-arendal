<div class="l-items-index">
  <%= render 'publications', publications: @publications %>
</div>

<div class="l-items-detail">
  <%= simple_form_for @publication, html: { class: 'c-form' } do |f| %>
    <%= render 'form',
      form: f,
      users: @users,
      partners: @partners,
      have_picture: @publication.picture_file_name ? true : false,
      picture_url: @publication.picture %>
  <% end %>
</div>
