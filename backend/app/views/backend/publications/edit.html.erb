<div class="l-navigation">
  <%= render 'backend/shared/nav_bar' %>
</div>

<div class="l-items-index">
  <%= render 'publications', publications: @publications %>
</div>

<div class="l-items-detail">
  <%= simple_form_for @publication, html: { class: 'c-form' } do |f| %>
    <%= render 'form',
      form: f,
      users: @users,
      partners: @partners,
      content_types: @content_types,
      activities: @activities,
      news_articles: @news_articles,
      tags: @tags,
      have_picture: @publication.picture.exists? ? true : false,
      picture_url: @publication.picture,
      media_content_id: @publication.media_content_id %>
  <% end %>
</div>
