<%= render 'backend/shared/form/header', form: form,
  inputs: [{value: :title, title_placeholder: 'News article title'}] %>

<div class="fields">
  <%= render 'backend/shared/form/field_input', form: form, value: :cover_src,
    label_txt: 'Cover picture' %>

  <%= render 'backend/shared/form/field_limited_input', form: form,
    value: :short_description, maxlength: 140 %>

  <%= render 'backend/shared/form/field_textarea', form: form,
    value: :description %>

  <%= render 'backend/shared/form/field_input', form: form,
    value: :exposure_slug %>

  <%= render 'backend/shared/form/field_input', form: form,
    value: :publication_date %>
</div>

<div class="fields -grey">
  <%= render 'backend/shared/form/field_tags', form: form, collection: tags %>

  <%= render 'backend/shared/form/field_association', form: form,
    value: :activities, collection: activities, label_method: :title,
    js_trigger_class: 'js-select-tags', note_txt: '(Choose related activities)' %>

  <%= render 'backend/shared/form/field_association', form: form,
    value: :publications, collection: publications, label_method: :title,
    js_trigger_class: 'js-select-tags', note_txt: '(Choose related publications)' %>
</div>
