<li class="c-index-item" data-item-id="<%= item.id %>">
  <div class="dragger">
    <svg class="icon">
      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-row_dragger"></use>
    </svg>
  </div>
  <div class="text -index-item -light title -short"><%= truncate(title, length: 30) %></div>
  <div class="text -index-item -light title -long"><%= truncate(title, length: 50) %></div>
  <% edit_path ||= [:edit, item] %>
  <%= link_to '', [:edit, item], class: 'linker js-linker' %>
  <div id="options-for-<%= item.id %>" class="options">
    <%= render 'backend/shared/index_options', item: item %>
  </div>
</li>
