<% if (can? :activate, location) && location.activated? %>
  <%= link_to 'Deactivate',
    "/manage/#{location.model_name.route_key}/#{location.id}/deactivate",
    method: :patch %>
<% end %>
<% if (can? :deactivate, location) && location.deactivated? %>
  <%= link_to 'Activate',
    "/manage/#{location.model_name.route_key}/#{location.id}/activate",
    method: :patch %>
<% end %>
