<h2>About sections</h2>

<% if can?(:create, AboutSection) %>
  <%= link_to "New", new_about_section_path %>
<% end %>

<ul>
  <% @about_sections.each do |about_section| %>
    <li>
      <h2><%= about_section.title %></h2>
      <%= link_to 'Edit', edit_about_section_path(about_section) %>
    </li>
  <% end %>
</ul>
