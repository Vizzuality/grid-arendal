<div class="l-items-index">
  <%= render 'about_sections', about_sections: @about_sections %>
</div>

<div class="l-items-detail">
  <h2>Edit</h2>
  <p><%= @about_section.title || 'about_section' %></p>
  <%= simple_form_for @about_section do |f| %>
    <%= render partial: f %>
    <div class="actions">
      <%=  f.submit  do %>
        <button>Update</button>
      <% end %>
    </div>
  <% end %>
</div>
