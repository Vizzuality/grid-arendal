<div class="l-navigation">
  <%= render 'backend/shared/nav_bar' %>
</div>

<div class="l-items-index">
  <%= render 'media_contents', media_content: @media_content, albums: @albums, photos: @photos %>
</div>

<div class="l-items-detail">
  <%= simple_form_for @media_content, html: { class: 'c-form' } do |f| %>
    <%= render "form_#{params[:mediable]}",
      form: f,
      albums: @albums,
      photos: @photos,
      have_picture: false,
      picture_url: nil,
      album_photos: [],
      tags: @tags %>
  <% end %>
</div>
