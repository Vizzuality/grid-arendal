<div class="l-header-single -about">
  <div class="overlay"></div>
  <%= render 'shared/menu' %>
  <div class="row">
    <div class="small-12 columns">
      <div class="title-block">
        <% breadcrumbs_links = [
          {'text' => 'About', 'link' => about_index_path}
        ] %>
        <%= render 'shared/breadcrumbs', links: breadcrumbs_links %>
      </div>
    </div>
  </div>
  <div class="section-menu">
    <div class="row">
      <div class="small-12 columns">
        <ul class="anchors">
          <li class="text -section-menu js-anchor" data-section-belongs="about">About</li>
          <li class="text -section-menu js-anchor" data-section-belongs="strategy">Strategy 2014-2017</li>
          <li class="text -section-menu js-anchor" data-section-belongs="programmes">Programmes</li>
          <li class="text -section-menu js-anchor" data-section-belongs="users">Staff</li>
          <li class="text -section-menu js-anchor" data-section-belongs="board">Board of Directors</li>
          <% if @vacancies.any? %>
            <li class="text -section-menu js-anchor" data-section-belongs="vacancies">Vacancies</li>
          <% end %>
          <li class="text -section-menu js-anchor" data-section-belongs="reports">Reports</li>
          <%= render 'shared/share' %>
        </ul>
      </div>
    </div>
  </div>
</div>

<section class="l-main-content -about"  data-section="about">
  <div class="row">
    <div class="small-12 column">
      <div class="text -title-event">About</div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 column">
      <div class="text -summary-alt"><%= raw @sections.where("title ilike 'About%'").first.try(:body) %></div>
    </div>
  </div>
</section>

<section class="l-main-content -about"  data-section="strategy">
  <div class="row">
    <div class="small-12 column">
      <div class="text -title-event">Strategy 2014-2017</div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 column">
      <div class="text -summary-alt"><%= raw @sections.where("title ilike 'Strategy%'").first.try(:body) %></div>
    </div>
  </div>
</section>

<%= render 'programmes', programmes: @programmes %>

<section class="l-main-content -about" data-section="users">
  <div class="row">
    <div class="small-12 columns">
      <div class="c-main-content-header">
        <div class="text -title-event">Staff</div>
      </div>
    </div>
  </div>
  <ul class="row">
    <% @users.each do |user| %>
      <li class="small-6 medium-3 large-2 columns">
        <div class="c-staff">
          <div class="staff-pic" style="background-image: url('<%= user.avatar(:medium) %>')"></div>
          <p class="text -author"><%= user.display_name %></p>
          <p class="text -meta"><%= user.current_position %></p>
        </div>
      </li>
    <% end %>
  </ul>
</section>

<section class="l-main-content -about"  data-section="board">
  <div class="row">
    <div class="small-12 column">
      <div class="text -title-event">Board of Directors</div>
    </div>
  </div>
  <ul class="row">
    <% @board_members.each do |user| %>
      <li class="small-6 medium-3 large-2 columns">
        <div class="c-staff">
          <div class="staff-pic" style="background-image: url('<%= user.avatar(:medium) %>')"></div>
          <p class="text -author"><%= user.display_name %></p>
          <p class="text -meta"><%= user.current_position %></p>
        </div>
      </li>
    <% end %>
  </ul>
</section>

<% if @vacancies.any? %>
  <section class="l-main-content -about"  data-section="vacancies">
    <div class="row">
      <div class="small-12 column">
        <div class="text -title-event">Vacancies</div>
      </div>
    </div>
    <div class="row">
      <div class="small-12 column">
        <div class="text -summary-alt -bold">
          <ul class="list">
            <% @vacancies.each do |vacancy| %>
              <li><%= vacancy.title %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </section>
<% end %>

<%= render 'shared/footer' %>
