<div class="l-header-single -activities-article" <% if @activity.media_content %>style="background-image: url('<%= @activity.media_content.photo_sizes.where(label: PhotoSize::LARGE).first.url %>');"<% end %>>
  <div class="overlay"></div>
  <%= render 'shared/menu' %>
  <div class="row">
    <div class="small-12 columns">
      <div class="title-block">
        <% breadcrumbs_links = [
          {'text' => 'Activities', 'link' => activities_path},
          {'text' => @activity.title}
        ] %>
        <%= render 'shared/breadcrumbs', links: breadcrumbs_links %>
      </div>
    </div>
  </div>

  <div class="section-menu">
    <div class="row">
      <div class="small-12 columns">
        <div class="title-block">
          <div class="small-8 medium-7">
            <h2 class="text -title-single-alt"><%= @activity.title %></h2>
          </div>
          <%= render 'shared/share' %>
        </div>

        <ul class="anchors">
          <li class="text -section-menu js-anchor" data-section-belongs="overview">Overview</li>
          <% if @activity.users.any? %>
            <li class="text -section-menu js-anchor" data-section-belongs="users">Staff involved</li>
          <% end %>
          <% if @activity.publications.any?%>
            <li class="text -section-menu js-anchor" data-section-belongs="posts">Publications</li>
          <% end %>
          <% if @activity.news_articles.any? %>
            <li class="text -section-menu js-anchor" data-section-belongs="news">Related News</li>
          <% end %>
          <% if @activity.media_contents.any? %>
            <li class="text -section-menu js-anchor" data-section-belongs="media">Related media</li>
          <% end %>
          <% if @activity.partners.any? %>
            <li class="text -section-menu js-anchor" data-section-belongs="partners">Partners & Links</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<section class="l-single-article -activities" data-section="overview">

  <div class="row">
    <div class="small-12 column">
      <div class="text -summary-alt"><%= raw @activity.description %></div>
    </div>
  </div>
</section>

<% if @activity.users.any? %>
  <%= render 'shared/users', users: @activity.users, sectionClass: 'content -color-3' %>
<% end %>

<% if @activity.publications.any? %>
  <%= render 'shared/posts', collection: @activity.publications.
    order(content_date: :desc),
    title: 'Related publications',
    link_txt: 'View all publications',
    link: publications_path, sectionClass: 'content -color-3' %>
<% end %>

<% if @activity.news_articles.any? %>
  <%= render 'shared/news', news: @activity.news_articles, sectionClass: 'content -color-3' %>
<% end %>

<% if @activity.media_contents.any? %>
  <%= render 'shared/media', media_contents: @activity.media_contents, sectionClass: 'content -color-3' %>
<% end %>

<% if @activity.partners.any? %>
  <%= render 'shared/partners', partners: @activity.partners, sectionClass: 'content -color-3' %>
<% end %>

<%= render 'shared/footer' %>
