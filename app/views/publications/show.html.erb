<div class="l-header-single -publications">
  <div class="overlay"></div>
  <%= render 'shared/menu' %>
  <div class="row">
    <div class="small-12 columns">
      <div class="title-block">
        <div class="c-breadcrumbs">
          <a href="/">
            <svg class="icon-home">
              <use xlink:href="#icon-breadcrumb-home"></use>
            </svg>
          </a>
          <svg class="icon">
            <use xlink:href="#icon-breadcrumb-chevron-right"></use>
          </svg>
          <%= link_to "Publications", publications_path, class: "text -meta" %>
          <svg class="icon">
            <use xlink:href="#icon-breadcrumb-chevron-right"></use>
          </svg>
          <span class="text -meta"><%= @publication.title %></span>
        </div>
        <div class="share">
          <svg class="icon">
            <use xlink:href="#icon-share"></use>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="l-single-article -publications">

  <div class="row">
    <div class="small-12 column">
      <%
        picture_url = if @publication.db_original_picture.present?
                        @publication.db_original_picture
                      elsif @publication.media_content
                        @publication.media_content.photos.first.photo_sizes.where(label: PhotoSize::LARGE).first.url
                      else
                        asset_path('original/missing2.png')
                      end
      %>
      <div class="c-article-image" style="background-image: url('<%= picture_url %>');"></div>
    </div>
  </div>

  <div class="content-wrapper">

    <div class="content">
      <h2 class="text -title-single-alt"><%= @publication.title %></h2>
      <div class="text -body-single-alt description">
        <%= raw @publication.description %>
        <div class="read-more">
          <svg class="icon">
            <use xlink:href="#icon-read-more-plus"></use>
          </svg>
          Read More
        </div>
      </div>
    </div>

    <div class="sidebar -publications">
      <div class="sidebar-content">
        <div class="meta">
          <div class="row">
            <div class="small-6 medium-3 large-4 columns">
              <% if @publication.db_medium_cover_picture.present? %>
                <div class="cover" style="<%= "background-image: url('#{@publication.db_medium_cover_picture}')" %>"></div>
              <% end %>
            </div>
            <div class="small-6 medium-9 large-8 columns">
              <div class="download-links">
                <% @publication.documents.each do |doc| %>
                  <div class="btn -dark">
                    <%= link_to doc.label, doc.document.url %>
                  </div>
                <% end %>
                <% @publication.weblinks.each do |wl| %>
                  <div class="btn -dark">
                    <%= link_to wl.label, wl.url %>
                  </div>
                <% end %>
                <!--div class="btn">graphics</div-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if @publication.partners.any? %>
      <%= render 'shared/partners', partners: @publication.partners %>
  <% end %>

  <% if @users.any? || @publication.lead_user %>
    <%= render 'shared/users', users: @users, lead_user: @publication.lead_user %>
  <% end %>

  <% if @publication.activities.any? %>
    <%= render 'shared/posts', collection: @publication.activities, title: 'activities',
      link: activities_path %>
  <% end %>

  <% if @publication.news_articles.any? %>
    <%= render 'shared/news', news: @publication.news_articles %>
  <% end %>

  <%#= render 'shared/media' %>

</div>

<%= render 'shared/footer' %>
