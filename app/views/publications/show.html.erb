<h2><%= @publication.title %></h2>

<%= @publication.description %>

<h3>Staff involved</h3>
<ul>
  <% @publication.users.each do |user| %>
    <li><%= user.display_name %></li>
  <% end %>
</ul>

<h3>Partners</h3>
<ul>
  <% @publication.partners.each do |partner| %>
    <li><%= link_to partner.name, partner.web_url %></li>
  <% end %>
</ul>
