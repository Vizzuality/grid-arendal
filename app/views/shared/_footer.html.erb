<%
  social_links = [
    {key: "twitter", url: "https://twitter.com/GRIDArendal"},
    {key: "facebook", url: "https://www.facebook.com/ArendalGRID/"},
    {key: "instagram", url: "https://www.instagram.com/gridarendal/"},
    {key: "flickr", url: "https://www.flickr.com/people/gridarendal"},
    {key: "linkedin", url: "https://www.linkedin.com/company/109106"},
    {key: "youtube", url: "https://www.youtube.com/user/GridArendalNorway"},
    {key: "vimeo", url: "https://vimeo.com/gridarendal"},
    {key: "email", url: "mailto:grid@grida.no"},
  ]
%>
<div class="l-footer">
  <div class="overlay"></div>
  <div class="footer-slider"></div>
  <div class="links">
    <div class="text -menu -light">Contact Us</div>
    <div class="social-links">
      <% social_links.each do |link| %>
        <a href="<%= link[:url] %>" target="_blank">
          <svg class="icon">
            <use xlink:href="#icon-rrss-<%= link[:key] %>"></use>
          </svg>
        </a>
      <% end %>
    </div>
    <ul class="info-links text -meta -light">
      <li><%= Time.now.year %> GRID Arendal</li>
      <li>Disclaimer</li>
      <li><a href="#" id="feedback-trigger">Feedback</a></li>
    </ul>
  </div>
</div>
