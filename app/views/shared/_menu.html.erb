<% sections = [
  {title: "Activities", key: "activities", path: activities_path},
  {title: "Publications", key: "publications", path: publications_path},
  {title: "Resources", key: "resources", path: resources_path},
  {title: "News", key: "news_articles", path: news_index_path},
  {title: "About", key: "about_sections", path: about_index_path}
] %>

<div class="row">
  <div class="small-12 columns">
    <div class="c-menu">
      <svg class="btn-menu js-btn-mobile-menu mobile" onclick="">
        <use xlink:href="#icon-menu"></use>
      </svg>
      <div class="logo-menu mobile">
        <a href="/">
          <svg class="icon">
            <use xlink:href="#icon-logo"></use>
          </svg>
        </a>
      </div>
      <ul class="list desktop text -menu">
        <li class="logo-menu">
          <a href="/">
            <svg class="icon">
              <use xlink:href="#icon-logo"></use>
            </svg>
          </a>
        </li>
        <% sections.each do |section| %>
          <li class="<% if controller_name == section[:key] %>-selected<% end %>"><%= link_to section[:title], section[:path] %></li>
        <% end %>
      </ul>
      <%= render 'shared/search' %>
    </div>
  </div>
</div>
<%= render 'shared/search_modal' %>
<div class="c-mobile-menu">
  <ul class="list text -menu -light">
    <li class="js-btn-close">
      <svg class="icon">
        <use xlink:href="#icon-close"></use>
      </svg>
    </li>
    <% sections.each do |section| %>
      <li class="<% if controller_name == section[:key] %>-selected<% end %>"><%= link_to section[:title], section[:path] %></li>
    <% end %>
  </ul>
</div>
