<section class="l-main-content" data-section="news">
  <div class="row">
    <div class="small-12 columns">
      <div class="c-main-content-header">
        <h2 class="text -title-block">Latest news</h2>
        <p class="text -view-all">
          <%= link_to news_index_path do %>
            <span>
              View all news
            </span>
            <svg class="icon -arrow">
              <use xlink:href="#icon-arrow"></use>
            </svg>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <ul class="row">
    <% if defined? @articles %>
    <% @articles.each do |article| %>
      <li class="small-12 medium-3 columns">
        <article class="c-card">
          <div class="card-pic" style="background-image: url('<%= article.cover_src %>')"></div>
          <div class="card-descrition">
            <h3 class="text -title-card"><%= article.title %></h3>
            <p class="text -meta">
              <%= time_ago_in_words(article.publication_date) %>
            </p>
          </div>
        </article>
      </li>
    <% end %>
    <% end %>
  </ul>
</section>
