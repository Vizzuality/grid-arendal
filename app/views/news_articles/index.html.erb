<div class="l-header-library -news">
  <div class="overlay"></div>
  <%= render 'shared/menu' %>
  <div class="row">
    <div class="small-12 columns">
      <div class="title-block">
        <h1 class="text -title-library">News</h1>
        <div class="text -summary">
          <%= @section.description %>
        </div>
        <%= render 'shared/share', current_route: @current_route  %>
      </div>
      <%= render 'shared/share', current_route: @current_route, mobile: true  %>
    </div>
  </div>
</div>

<div class="l-main-content -news -only-grid -color-4">
  <div class="row">
    <div class="small-12 small-centered columns grid-column">
      <div class="masonry-layout masonry-1-1-2-4" data-columns="3">
        <%= render 'news', articles: @articles %>
      </div>
    </div>
  </div>

  <%= render 'shared/scroll_to_top' %>

</div>

<%= render 'shared/footer' %>
